<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:gravity="center"
	android:orientation="vertical"
	android:background="@drawable/mcd_bg">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="center"
		android:orientation="vertical"
		android:padding="30dp"
		android:layout_weight="1.0">

		<Button
			android:textColor="#ffffffff"
			android:shadowColor="#ff000000"
			android:shadowDx="3.0"
			android:shadowDy="3.0"
			android:shadowRadius="0.1"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Документация"
			android:layout_margin="5dp"
			android:background="@drawable/moddedpe_main_start_button_drawable"
			android:id="@+id/nModAPIDocumentation"
			android:onClick="nModAPIDocumentationBtn"/>

		<Button
			android:textColor="#ffffffff"
			android:shadowColor="#ff000000"
			android:shadowDx="3.0"
			android:shadowDy="3.0"
			android:shadowRadius="0.1"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Уроки"
			android:layout_margin="5dp"
			android:background="@drawable/moddedpe_main_start_button_drawable"
			android:id="@+id/lessonsNMod"
			android:onClick="lessonsNModBtn"/>

		<Button
			android:textColor="#ffffffff"
			android:shadowColor="#ff000000"
			android:shadowDx="3.0"
			android:shadowDy="3.0"
			android:shadowRadius="0.1"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Библиотека"
			android:layout_margin="5dp"
			android:background="@drawable/moddedpe_main_start_button_drawable"
			android:id="@+id/libraryNMod"
			android:onClick="libraryNModBtn"/>

		<Button
			android:textColor="#ffffffff"
			android:shadowColor="#ff000000"
			android:shadowDx="3.0"
			android:shadowDy="3.0"
			android:shadowRadius="0.1"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Открыть AIDE"
			android:layout_margin="5dp"
			android:background="@drawable/moddedpe_main_start_button_drawable"
			android:id="@+id/openAide"
			android:onClick="openAide"/>

		<Button
			android:textColor="#ffffffff"
			android:shadowColor="#ff000000"
			android:shadowDx="3.0"
			android:shadowDy="3.0"
			android:shadowRadius="0.1"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Открыть ModdedPE"
			android:layout_margin="5dp"
			android:background="@drawable/moddedpe_main_start_button_drawable"
			android:id="@+id/openModdedPE"
			android:onClick="openModdedPE"/>

	</LinearLayout>

</LinearLayout>

